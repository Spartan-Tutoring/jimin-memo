<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/set_profile_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/set_name_tv"
        android:layout_marginBottom="30dp"
        android:src="@drawable/user"/>

    <TextView
        android:id="@+id/set_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="27sp"
        android:textColorHint="@color/black"
        android:hint="jimin"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/set_modify_iv"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:src="@drawable/pen"
        app:layout_constraintStart_toEndOf="@id/set_name_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/set_logout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="LOGOUT"
        android:textSize="25sp"
        android:textColor="@color/signin_tx"/>
</androidx.constraintlayout.widget.ConstraintLayout>